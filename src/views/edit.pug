doctype html
html
  head
    title Editar Libro
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/style.css")
  body
    .container
      h1 class="text-center my-4" Editar Libro

      form(action=`/update/${book.id}`, method="POST")
        .mb-3
          label(for="status", class="form-label") Estado
          select(name="status", class="form-select")
            option(value="pendiente", selected=book.status == 'pendiente' ? true : null) Pendiente
            option(value="leyendo", selected=book.status == 'leyendo' ? true : null) Leyendo
            option(value="leído", selected=book.status == 'leído' ? true : null) Leído

        .mb-3
          button(type="submit", class="btn btn-primary") Actualizar Libro

      // Enlace para volver a la página principal
      a(href="/", class="btn btn-secondary mt-3") Volver a la Biblioteca
