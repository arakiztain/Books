doctype html
html
  head
    title Biblioteca Personal
    link(rel="stylesheet", href="/style.css")
  body
    h1 Mi Biblioteca Personal

    // Mostrar el botón "Agregar Libro" solo si hay un usuario logueado
    if user
      a(href="/add") Agregar Libro

    table
      thead
        tr
          th Título
          th Autor
          th Género
          th Estado
          th Acción
      tbody
        each book in books
          tr
            td= book.title
            td= book.author
            td= book.genre
            td= book.status
            td
              a(href=`/edit/${book.id}`) Editar
              | 
              form(action=`/delete/${book.id}` method="POST" style="display:inline;")
                button(type="submit") Eliminar

    // Mostrar el nombre de usuario si está logueado, o los botones de inicio de sesión y registro si no lo está
    if user
      //p Bienvenido, #{user.username}!
      a(href="/auth/logout") Cerrar sesión
    else
      a(href="/auth/login") Iniciar sesión
      |
      a(href="/auth/register") Registrarse
