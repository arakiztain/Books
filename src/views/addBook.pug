doctype html
html

block content
  h1 Añadir un Nuevo Libro
  form(action='/add' method='POST')
    label(for='title') Título
    input(type='text' name='title' id='title' required)

    label(for='author') Autor
    input(type='text' name='author' id='author' required)

    label(for='publisher') Editorial
    input(type='text' name='publisher' id='publisher')

    label(for='year') Año
    input(type='number' name='year' id='year')

    label(for='genre') Género
    input(type='text' name='genre' id='genre')

    label(for='location') Ubicación
    input(type='text' name='location' id='location')

    label(for='status') Estado
    select(name='status')
      option(value='pendiente') Pendiente
      option(value='leyendo') Leyendo
      option(value='leído') Leído

    button(type='submit') Añadir Libro
