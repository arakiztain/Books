doctype html
html
  head
    title Añadir Nuevo Libro
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/style.css")
  body
    .container
      h1(class="text-center my-4") Añadir un Nuevo Libro

      form(action="/add", method="POST")
        .mb-3
          label(for="title", class="form-label") Título
          input(type="text", name="title", id="title", class="form-control", required)

        .mb-3
          label(for="author", class="form-label") Autor
          input(type="text", name="author", id="author", class="form-control", required)

        .mb-3
          label(for="publisher", class="form-label") Editorial
          input(type="text", name="publisher", id="publisher", class="form-control")

        .mb-3
          label(for="year", class="form-label") Año
          input(type="number", name="year", id="year", class="form-control")

        .mb-3
          label(for="genre", class="form-label") Género
          input(type="text", name="genre", id="genre", class="form-control")

        .mb-3
          label(for="location", class="form-label") Ubicación
          input(type="text", name="location", id="location", class="form-control")

        .mb-3
          label(for="status", class="form-label") Estado
          select(name="status", id="status", class="form-select")
            option(value="pendiente") Pendiente
            option(value="leyendo") Leyendo
            option(value="leído") Leído

        .d-grid.gap-2
          button(type="submit", class="btn btn-success") Añadir Libro

      a(href="/", class="btn btn-secondary mt-3") Volver a la Biblioteca
